{{- $file := "" -}}
{{- if eq .chezmoi.os "darwin" -}}
{{-   $file = "./assets/.gitignore.macos" -}}
{{- else if eq .chezmoi.os "linux" -}}
{{-   if (.chezmoi.kernel.osrelease | lower | contains "microsoft") -}}
{{-     $file = "./assets/.gitignore.windows" -}}
{{-   else -}}
{{-     $file = "./assets/.gitignore.linux" -}}
{{-   end -}}
{{- end -}}
{{- include $file -}}
