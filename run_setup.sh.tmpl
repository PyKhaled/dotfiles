#!/bin/bash

set -e

mkdir -p \
  $HOME/.aws \
  $HOME/.azure \
  $HOME/.cache \
  $HOME/.config \
  $HOME/.docker \
  $HOME/.gnupg \
  $HOME/.kube \
  $HOME/.local \
  $HOME/.ssh \
  $HOME/bin \
  $HOME/Projects
chmod 700 \
  $HOME/.aws \
  $HOME/.azure \
  $HOME/.cache \
  $HOME/.config \
  $HOME/.docker \
  $HOME/.gnupg \
  $HOME/.kube \
  $HOME/.local \
  $HOME/.ssh \
  $HOME/bin \
  $HOME/Projects

eval $(source "$HOME/.local/bin/detect-operating-system.sh")
source "$HOME/.path"

source {{ joinPath .chezmoi.sourceDir "./assets/commons.sh" }}
for file in {{ joinPath .chezmoi.sourceDir "./assets/*.$SYSTEM_DIST.sh" }}; do
  print-header "Running the $file script ..."
  "$file"
done
